<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="IndicatorIcon">
        <item name="android:layout_width">@dimen/indicator_icon_width</item>
        <item name="android:layout_height">@dimen/indicator_icon_height</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@null</item>
    </style>

    <style name="dist_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Theme.AppCompat.FullScreen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppCompat.FullScreen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
